<?xml version="1.0" encoding="utf-8"?>
<xs:schema attributeFormDefault="unqualified" elementFormDefault="qualified" xmlns:xs="http://www.w3.org/2001/XMLSchema">
  <xs:element name="records">
    <xs:complexType>
      <xs:sequence>
        <xs:element maxOccurs="unbounded" name="row">
          <xs:complexType>
            <xs:sequence>
              <xs:element name="customer_info">
                <xs:complexType>
                  <xs:sequence>
                    <xs:element name="name">
                        <xs:simpleType>
                            <xs:restriction base="xs:string">
                                <xs:maxLength value="20"/>
                                <xs:minLength value="1"/>   <!-- Change this value to 1 after check all restrictions -->
                                <xs:pattern value="[A-Za-zığĞşŞçÇöÖüÜ]*"/>
                            </xs:restriction>
                        </xs:simpleType>                        
                    </xs:element>
                    <xs:element name="surname">
                        <xs:simpleType>
                            <xs:restriction base="xs:string">
                                <xs:maxLength value="30"/>
                                <xs:minLength value="0"/>   <!-- Change this value to 1 after check all restrictions -->
                                <xs:pattern value="[A-Za-zığĞşŞçÇöÖüÜ]*"/>
                            </xs:restriction>
                        </xs:simpleType>                        
                    </xs:element>
                    <xs:element name="gender">
                        <xs:simpleType>
                            <xs:restriction base="xs:string">
                                <xs:pattern value="M|F"/>
                            </xs:restriction>
                        </xs:simpleType>                        
                    </xs:element>
                    <xs:element name="occupancy">
                        <xs:simpleType>
                            <xs:restriction base="xs:string">
                                <xs:maxLength value="30"/>
                                <xs:minLength value="0"/>   <!-- Change this value to 1 after check all restrictions -->
                                <xs:pattern value="[A-Za-zığĞşŞçÇöÖüÜ]*"/>
                            </xs:restriction>
                        </xs:simpleType>                        
                    </xs:element>
                    <xs:element name="level_of_education" type="xs:string" />
                    <xs:element name="email" type="xs:string" />
                  </xs:sequence>
                </xs:complexType>
              </xs:element>
              <xs:element name="bank_account_info">
                <xs:complexType>
                  <xs:sequence>
                    <xs:element name="bank_account_number" type="xs:string" />
                    <xs:element name="IBAN" type="xs:string" />
                    <xs:element name="account_type" type="xs:string" />
                    <xs:element name="total_balance_available">
                      <xs:complexType>
                        <xs:simpleContent>
                          <xs:extension base="xs:unsignedShort">
                            <xs:attribute name="currency_unit" type="xs:string" use="required" />
                            <xs:attribute name="bigEnd_Version" type="xs:int" use="required" />
                          </xs:extension>
                        </xs:simpleContent>
                      </xs:complexType>
                    </xs:element>
                    <xs:element name="available_for_loan" type="xs:string" />
                  </xs:sequence>
                </xs:complexType>
              </xs:element>
            </xs:sequence>
            <xs:attribute name="id" type="xs:unsignedByte" use="required" />
          </xs:complexType>
        </xs:element>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
</xs:schema>